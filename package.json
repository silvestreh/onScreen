{
  "name": "onscreen",
  "version": "1.3.3",
  "description": "A light library that does stuff when the matched elements enter or leave the viewport",
  "main": "dist/on-screen.umd.js",
  "jsnext:main": "dist/on-screen.es6.js",
  "scripts": {
    "prebuild": "eslint lib test",
    "build": "rollup -c rollup.config.js",
    "postbuild": "uglifyjs dist/on-screen.umd.js -c -o dist/on-screen.umd.min.js --source-map filename=dist/on-screen.umd.min.map",
    "prepublish": "npm run build",
    "test": "karma start",
    "dev": "watch 'npm run build' lib/"
  },
  "repository": "silvestreh/onScreen",
  "keywords": [
    "on screen",
    "viewport",
    "element position relative to viewport",
    "element in viewport",
    "element inside viewport",
    "enter viewport",
    "leave viewport"
  ],
  "author": "Silvestre Herrera <silvestre.herrera@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/silvestreh/onScreen/issues"
  },
  "files": [
    "lib",
    "dist"
  ],
  "homepage": "http://silvestreh.github.io/onScreen/",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "10.0.2",
    "chai": "^4.2.0",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-plugin-import": "2.18.2",
    "karma": "^4.2.0",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-rollup-plugin": "^0.2.4",
    "karma-sinon": "^1.0.5",
    "mocha": "6.2.0",
    "mocha-phantomjs-core": "2.1.2",
    "phantomjs-prebuilt": "2.1.16",
    "rollup": "1.18.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-multi-entry": "2.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sinon": "7.3.2",
    "source-map-support": "0.5.13",
    "uglifyjs": "2.4.11",
    "watch": "1.0.2"
  }
}
